<Page
    x:Class="WpfUPractika.Pages.OfferPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfUPractika.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="OfferPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <ListView
            x:Name="listOffer"
            Grid.Row="0"
            Grid.ColumnSpan="5"
            Height="300"
            Margin="20"
            Loaded="listOffer_Loaded">
            <ListView.View>
                <GridView>
                    <GridViewColumn
                        Width="120"
                        DisplayMemberBinding="{Binding Client.FirstName}"
                        Header="Клиент" />
                    <GridViewColumn
                        Width="120"
                        DisplayMemberBinding="{Binding Realtor.FirstName}"
                        Header="Риэлтор" />
                    <GridViewColumn
                        Width="120"
                        DisplayMemberBinding="{Binding Property.TypeProperty.Name}"
                        Header="Недвижимость" />
                    <GridViewColumn
                        Width="120"
                        DisplayMemberBinding="{Binding Price}"
                        Header="Цена" />
                </GridView>
            </ListView.View>
        </ListView>

        <Button
            x:Name="addButton"
            Grid.Row="1"
            Grid.Column="1"
            MinHeight="30"
            Margin="10"
            VerticalAlignment="Center"
            Click="addButton_Click"
            Content="Добавить" />
        <Button
            x:Name="editButton"
            Grid.Row="1"
            Grid.Column="2"
            MinHeight="30"
            Margin="10"
            VerticalAlignment="Center"
            Click="editButton_Click"
            Content="Изменить" />
        <Button
            x:Name="deleteButton"
            Grid.Row="1"
            Grid.Column="3"
            MinHeight="30"
            Margin="10"
            VerticalAlignment="Center"
            Click="deleteButton_Click"
            Content="Удалить" />
    </Grid>
</Page>
